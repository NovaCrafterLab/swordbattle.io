################################################################################
#  GLOBAL (applies to every container / process)
################################################################################
NODE_ENV=           # development | staging | production
TZ=UTC              # timezone for all containers

################################################################################
#  DATABASE (used by API & other services)
################################################################################
# Preferred: single DSN
DB_URL=postgresql://sb:supersecret@db:5432/postgres   # Full Postgres connection string

# Legacy: split form (ignored when DB_URL is set)
DB_USERNAME=sb              # Database user
DB_PASSWORD=supersecret     # Database password
DB_HOST=db                  # Database host / IP
DB_PORT=5432                # Database port number

################################################################################
#  API SERVICE
################################################################################
API_PORT=8080                # Port the REST/GraphQL API listens on
APP_SECRET=app-secret        # JWT / cookie signing key
# RECAPTCHA_SECRET_KEY=xxxx    # Google reCAPTCHA v2/v3 secret

################################################################################
#  GAME SERVER (real‑time gateway)
################################################################################
SERVER_PORT=8000                    # Port for websocket / UDP etc.
SERVER_SECRET=server-secret         # Shared auth secret (server ⇄ API)
# MODERATION_SECRET=replace-me      # Token required for admin / moderation routes
API_ENDPOINT=http://api:8080        # URL the server calls to reach the API

################################################################################
#  TLS / HTTPS CONFIG
################################################################################
USE_SSL=false                # true = enable HTTPS
# SSL_KEY=/etc/ssl/game.key    # PEM private key (path or inline)
# SSL_CERT=/etc/ssl/game.crt   # PEM certificate (path or inline)

################################################################################
#  DB MIGRATOR (maintenance / one‑off jobs)
################################################################################
# OLD_DB=postgresql://olduser:oldpass@old-host:5432/old_db   # Source DB
# NEW_DB=postgresql://newuser:newpass@new-host:5432/new_db   # Target DB

################################################################################
#  CLIENT BUILD (Create-React-App / Webpack)
#  Values here are consumed at *build time*; they end up in the static bundle
#  so NEVER place secrets below!
################################################################################
# PUBLIC_URL=/

# REACT_APP_BASENAME=/
REACT_APP_ENDPOINT_DEV=localhost:8000
REACT_APP_ENDPOINT_TEST=localhost:8000
# REACT_APP_ENDPOINT_EU=
# REACT_APP_ENDPOINT_US=
# REACT_APP_ENDPOINT_US_BACKUP=
REACT_APP_API=localhost:8080
# REACT_APP_API_BACKUP=
# REACT_APP_RECAPTCHA_CLIENT_KEY=

################################################################################
#  DIAGNOSTICS
################################################################################
DEBUG=false                  # true = verbose logging
